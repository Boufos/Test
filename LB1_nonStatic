using System;


namespace lb_oop1
{


    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter the length of the array: ");

            int lengtharray = Int32.Parse(Console.ReadLine());
            double[] array = new double[lengtharray];


            for (int i = 0; i < array.Length; i++)
            {
                Console.Write("Enter array element: ");
                array[i] = Int32.Parse(Console.ReadLine());
            }

            sumcube sumarray = new sumcube();
            sumarray.sumCube(array);
            Console.WriteLine("Cubic sum array:");

            foreach (var element in array)
            {
                Console.Write(element + " ");
            }
        }

        class sumcube
        {
            public double[] sumCube(double[] array)
            {
                array[0] = Math.Pow(array[0], 3);
                for (int i = 1; i < array.Length; i++)
                {
                    array[i] = Math.Pow(array[i], 3) + array[i - 1];
                }
                return array;
            }
        }
    }


}
